<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showDividers="middle"
    android:divider="?dividerHorizontal"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:divider="?dividerVertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/version_info"
            android:drawableTop="@mipmap/app_logo"
            android:drawablePadding="12dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/version_info"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/download_url"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/let_your_friend_download"/>

    </LinearLayout>

    <Button
        android:id="@+id/check_version"
        android:text="@string/check_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="?attr/selectableItemBackground"/>

    <Button
        android:id="@+id/forward_to_website"
        android:text="@string/forward_to_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="?attr/selectableItemBackground"/>


    <LinearLayout
        android:id="@+id/new_version_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            android:id="@+id/check_version_information"
            android:text="@string/last_check_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/new_version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_info"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/new_version_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/download"/>
    </LinearLayout>


</LinearLayout>